<%- include('layouts/header') %> 
<body>
    <%- include('layouts/navbar') %> 
    <h1 id="title">DASHBOARD DATA USER</h1>
    <% if (msg.length !== 0 ) { %>
        <div class="alert alert-success" role="alert">
            <%= msg %> 
          </div>
        <% } %>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <table class="table table-info">
                    <thead class="thead-dark">
                    <tr>
                        <th scope="col">No</th>
                        <th scope="col">Username</th>
                        <th scope="col">First Name</th>
                        <th scope="col">Last Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Phone</th>
                        <th scope="col">Action</th>
                    </tr>
                    </thead>
                    <% if (users.length === 0) { %>
                        <tr>
                            <th colspan="12">
                                <div class="alert alert-danger" role="alert">
                                    Data User masih kossong!
                                </div>
                            </th>
                        </tr>
                    <% } %>
                    <% users.forEach((user, i )=> { %>
                        <tbody>
                        <tr>
                            <th scope="row"><%= i + 1  %> </th>
                            <td><%= user.username %> </td>
                            <td><%= user.Biodatum.firstname %> </td>
                            <td><%= user.Biodatum.lastname %> </td>
                            <td><%= user.email%> </td>
                            <td><%= user.Biodatum.phone%> </td>
                            <td><a href="/delete/data/<%= user.id %>"><i class="bi bi-trash"></i></a> <a class="btn btn-primary badge badge-pill" href="/update/data/<%= user.id %>">edit </a></td>
                        </tr>
                        </tbody>
                    <% }) %>
                </table>
            </div>
        </div>
    </div>
    <script>
        const alert = document.querySelector('.alert')
        setTimeout(()=>{
            alert.classList.add('hidden');
        }, 3000);
    </script>

</body>

<%- include('layouts/footer') %> 